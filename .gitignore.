import pandas as pd

# Define the path to the data file within the 'data' subfolder
file_path = 'data/WA_Fn-UseC_-Telco-Customer-Churn.csv'

try:
    # Use the correct relative path
    df = pd.read_csv(file_path)
    print(f"Dataset loaded successfully from '{file_path}'!")
except FileNotFoundError:
    print(f"Error: '{file_path}' not found.")
    print("Please make sure you have a 'data' folder in your project directory,")
    print("and the 'WA_Fn-UseC_-Telco-Customer-Churn.csv' file is inside it.")

# Display the first 5 rows if the dataframe was loaded
if 'df' in locals():
    print("\nFirst 5 rows of the dataset:")
    display(df.head())
